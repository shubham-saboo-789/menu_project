import time
from datetime import datetime, timedelta

def my_task():
    print("This is my scheduled task.")

def schedule_task(scheduled_time):
    scheduled_datetime = datetime.strptime(scheduled_time, "%H:%M")
    now = datetime.now()

    # Calculate the delay in seconds until the scheduled time
    delay = (scheduled_datetime - now).total_seconds()
    
    if delay > 0:
        print(f"Task scheduled to run at {scheduled_time}. Waiting for the scheduled time...")

        # Sleep until the scheduled time
        time.sleep(delay)
        my_task()

    else:
        print("Scheduled time is in the past. Please schedule a future time.")

